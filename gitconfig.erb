[user]
  name  = <%=  print(" - Your Name: ");  STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print(" - Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  pager = /opt/homebrew/share/git-core/contrib/diff-highlight/diff-highlight | less -R
[init]
  defaultBranch = main
[color]
  ui=true
[color "branch"]
  current = green
  remote = red
[color "status"]
  added = green
  changed = red
  untracked = cyan
[color "diff"]
  frag = cyan
  old = red
  new = green
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[push]
  default = current
[instaweb]
  local = true
  httpd = webrick
[alias]
  s     = status --short --branch
  l     = log --graph --pretty='%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%%an>%Creset'
  ll    = log --parents
  ld    = log -p --parents
  who   = shortlog -s
  d     = diff --color
  ds    = diff --color --stat
  dw    = diff --color-words
  dlt   = diff lib/ test/
  a     = add
  aa    = add --all
  aap   = add --all -p
  alt   = add lib/ test/
  c     = commit
  cm    = commit -m
  k     = checkout
  kb    = checkout -b
  b     = branch --sort=-committerdate -v
  bb    = branch -a -v
  bd    = branch -d
  bdd   = branch -D
  m     = merge
  p     = push
  pt    = push --tags
  u     = pull --ff-only
  f     = fetch
  rb    = rebase
  rbf   = rebase --fork-point
  rbo   = rebase --onto
  reset = reset
  root  = rev-parse --show-toplevel
  chp   = cherry-pick
  pn    = remote prune origin
